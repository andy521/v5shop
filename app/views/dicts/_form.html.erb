<%= form_for @dict,html:{class:'form-horizontal',role:'form'} do |f| %>
      <% if @dict.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@dict.errors.count, "error") %> prohibited this dict from being saved:</h2>

          <ul>
          <% @dict.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label">名称</label>
          <div class="col-sm-8">
            <%= f.text_field :name,class:"form-control",placeholder:"名称" %>
          </div>
        </div>
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label">字典类型</label>
          <div class="col-sm-8">
            <%= f.select(:dict_type_id,nil,{},class:'form-control') do %>
              <% @dict_types.each do |dt| -%>
                <% if @dict.dict_type_id == dt.id %>
                  <%= content_tag(:option, dt.name, value: dt.id,selected: 'selected') %>
                <% else %>
                  <%= content_tag(:option, dt.name, value: dt.id) %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">描述</label>
          <div class="col-sm-8">
            <%= f.text_area :intro,class:"form-control",row:3,placeholder:'描述' %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">

          <%= f.submit '保 存',class:'btn btn-primary'%>
          </div>
        </div>
      <% end %>

