<%= form_for manager,html:{class:'form-horizontal',role:'form'} do |f| %>
			  <div class="form-group">
			    <label for="name" class="col-sm-2 control-label">用户名</label>
			    <div class="col-sm-8">
			      <%= f.text_field :name,class:"form-control",placeholder:'用户名' %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
			    <div class="col-sm-8">
			      <%= f.text_field :email,class:"form-control",placeholder:"Email" %>
			    </div>
			  </div>
			  <% if params[:action] == 'new'%>
				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">密 码</label>
				    <div class="col-sm-8">
				      <%= f.password_field :password,class:"form-control",placeholder:'密码' %>
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">确认密码</label>
				    <div class="col-sm-8">
				      <%= f.password_field :password_confirmation,class:"form-control",placeholder:'确认密码' %>
				    </div>
				  </div>
			  <% end %>
			  <div class="form-group">
			    <label for="inputPassword3" class="col-sm-2 control-label">头 像</label>
			    <div class="col-sm-8">
			      <%= f.text_field :icon,class:"form-control",placeholder:'头 像' %>
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-8">

			    <%= f.submit '保 存',class:'btn btn-primary'%>
			    </div>
			  </div>
			<% end %>