
<%= form_tag(user_login_post_path,class:'form-horizontal',role:'form') do %>
<!-- <form class="form-horizontal" role="form"> -->
  <div class="form-group">
    <div class="col-lg-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <%= text_field_tag('name',nil,class:"form-control",placeholder:"用户名/邮箱/手机")%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <%= password_field_tag('password',nil,class:"form-control",placeholder:"密码")%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <button type="submit" class="col-lg-12 btn btn-warning" style="padding:8px 0;"><h4>登&nbsp;&nbsp;&nbsp;录</h4></button>
    </div>
  </div>
  <% if @returnUrl %>
    <input type="hidden" name="returnUrl" value="<%= @returnUrl %>">
  <% end %>
<% end %>
<div class="col-lg-5 login-footer-label">没有在线帐号？</div>
<div class="col-lg-4 login-footer-label"><%= link_to '免费注册',user_register_path %></div>
<div class="col-lg-3 login-footer-label"><a href="#">忘记密码</a></div>
<div class="col-lg-12" style="line-height:30px;min-height:20px;text-align:center">
    <label style="color:#ff0000;"><%= flash[:alert]%></label>
</div>